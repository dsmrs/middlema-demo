
<div class="container text-center">

  <h1>Where can you find us?</h1>

  <div class="row">
    <% data.cities.each do |city| %>

      <div class="col-xs-6 col-md-4">
        <div class="card" style="background-image: url('<%= image_path city.image %>')">
          <h2><%= city.name.capitalize %></h2>
          <p><%= city.address %></p>
        </div>
      </div>

    <% end %>

  </div>
</div>
